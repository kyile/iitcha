{
  "name": "view",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "next": "12.0.8",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.9",
    "@types/jest": "^27.0.1",
    "@types/node": "17.0.10",
    "@types/react": "17.0.38",
    "@types/react-dom": "^17.0.9",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "enzyme": "^3.11.0",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.8",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.5",
    "typescript": "4.5.5"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
